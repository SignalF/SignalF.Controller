<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<LangVersion>Preview</LangVersion>
		<EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
		<IsRoslynComponent>true</IsRoslynComponent>
		<GeneratePackageOnBuild>False</GeneratePackageOnBuild>
		<IncludeBuildOutput>false</IncludeBuildOutput>
		<NoPackageAnalysis>true</NoPackageAnalysis>
			<EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>

	</PropertyGroup>

	<PropertyGroup>
		<Authors>$(CompanyName)</Authors>
		<Company>$(CompanyName)</Company>
		<Copyright>$(CompanyName)</Copyright>
		<Description>Source generator to support assembly load context in Revit add-ins.</Description>
		<Title>Scotec.Revit.Isolation.SourceGenerator</Title>
	</PropertyGroup>

	<PropertyGroup>
		<Deterministic>False</Deterministic>
		<Optimize>False</Optimize>
	</PropertyGroup>

	<ItemGroup>
		<None Remove="Resources\ConfigurationBuilder.template" />
		<None Remove="Resources\DefinitionBuilder.template" />
		<None Remove="Resources\DeviceExtensions.template" />
		<None Remove="Resources\DeviceOptions.template" />
		<None Remove="Resources\TemplateBuilder.template" />
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Include="Resources\TemplateBuilder.template" />
		<EmbeddedResource Include="Resources\DefinitionBuilder.template" />
		<EmbeddedResource Include="Resources\DeviceOptions.template" />
		<EmbeddedResource Include="Resources\DeviceExtensions.template" />
		<EmbeddedResource Include="Resources\ConfigurationBuilder.template" />
	</ItemGroup>


	<ItemGroup>
		<PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.4">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<!-- Visual Studio 2022 version 17.8 uses Roslyn 4.8.0. Using a newer version requires update of Visual Studio. -->
		<!-- Visual Studio 17.8 is the first version supporting .NET8. -->
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="[4.8.0]">
			<PrivateAssets>all</PrivateAssets>
		</PackageReference>
		<PackageReference Include="System.CodeDom" Version="8.0.0"></PackageReference>
		<PackageReference Include="T4.SourceGenerator" Version="1.2.0">
		  <PrivateAssets>all</PrivateAssets>
		  <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>



	<ItemGroup>
		<AdditionalFiles Include="Test.tt" />
	</ItemGroup>

</Project>